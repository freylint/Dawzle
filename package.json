{
  "name": "dawzle",
  "version": "0.1.0",
  "description": "A modern cross platform DAW written in rust.",
  "author": "Katherine Vance <katvance64@gmail.com>",
  "private": true,
  "license": "BSD-3-Clause",
  "workspaces": [
    "packages/src-tauri",
    "packages/src-ng"
  ],
  "scripts": {
    "dev": "yarn dev:tauri",
    "build": "yarn build:tauri",
    "dev:tauri": "tauri dev",
    "build:tauri": "tauri build",
    "dev:ng": "cd src-ng && ng serve",
    "build:ng": "cd src-ng && ng build",
    "lint": "cd src-ng && yarn lint",
    "generate-icons": "tauri icon assets/icons/app-icon.png",
    "postinstall": "yarn generate-icons"
  },
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.0.0-beta.5",
    "lint-staged": "^11.0.0",
    "yorkie": "^2.0.0",
    "@angular-devkit/build-angular": "~12.2.2",
    "@angular/cli": "~12.2.2",
    "@angular/compiler-cli": "~12.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.3.5"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src-ng/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=14.16.x"
  }
}
